<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.WebAppContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettagliServlet</servlet-name>
        <servlet-class>servlet.DettagliServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RepairpwdServlet</servlet-name>
        <servlet-class>servlet.RepairpwdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrezziServlet</servlet-name>
        <servlet-class>servlet.PrezziServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaginaUtenteServlet</servlet-name>
        <servlet-class>servlet.PaginaUtenteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AmministrazioneServlet</servlet-name>
        <servlet-class>servlet.AmministrazioneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostiSpettacoloServlet</servlet-name>
        <servlet-class>servlet.PostiSpettacoloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DettagliServlet</servlet-name>
        <url-pattern>/DettagliServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RepairpwdServlet</servlet-name>
        <url-pattern>/RepairpwdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrezziServlet</servlet-name>
        <url-pattern>/PrezziServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaginaUtenteServlet</servlet-name>
        <url-pattern>/PaginaUtenteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AmministrazioneServlet</servlet-name>
        <url-pattern>/AmministrazioneServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostiSpettacoloServlet</servlet-name>
        <url-pattern>/PostiSpettacoloServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:derby://localhost:1527/CinemaWebApp</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>
</web-app>
